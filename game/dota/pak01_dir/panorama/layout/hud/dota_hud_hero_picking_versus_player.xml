<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_pregame.vcss_c" />
		<include src="s2r://panorama/styles/hud/dota_hud_versus_screen.vcss_c" />
	</styles>

	<DOTAHudHeroPickingVersusPlayer class="HeroVSContainer">
		<Panel class="MaskContainer">
			<Panel class="ZoomLines ZoomLinesBG"/>
			<DOTAScenePanel id="HeroRender" rotateonhover="false" yawmin="-10" yawmax="10" pitchmin="0" pitchmax="0" particleonly="false" />
			<Label class="HeroName" text="{g:dota_hero_name:hero_id}" />
			<Panel class="GradientShadow"/>
			<Panel class="PlayerInfoContainer">
				<Panel id="PlayerNameContainer">
					<DOTABattleCupVictoryIcon id="BattleCupVictoryIcon" />
					<Label class="PlayerName" text="{g:dota_persona:pro_short:nl:nt:player_account_id}" html="true"/>
				</Panel>
				<Panel id="HeroRelics">
					<Panel id="RareRelics">
						<Panel id="Rare0" class="RareRelic" />
						<Panel id="Rare1" class="RareRelic" />
						<Panel id="Rare2" class="RareRelic" />
						<Panel id="Rare3" class="RareRelic" />
					</Panel>
					<Panel id="NormalRelics">
						<Panel id="Normal0" class="NormalRelic" />
						<Panel id="Normal1" class="NormalRelic" />
						<Panel id="Normal2" class="NormalRelic" />
						<Panel id="Normal3" class="NormalRelic" />
						<Panel id="Normal4" class="NormalRelic" />
						<Panel id="Normal5" class="NormalRelic" />
						<Panel id="Normal6" class="NormalRelic" />
						<Panel id="Normal7" class="NormalRelic" />
						<Panel id="Normal8" class="NormalRelic" />
						<Panel id="Normal9" class="NormalRelic" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="BattlePassInfo">
			<Panel id="BattlePassInfoStrip">
				<Panel id="BattlePassInfoStripLeft" />
				<Panel id="BattlePassInfoStripMain">
					<Label text="#DOTA_SeasonPass_Friends_Leaderboard_BattleLevel" />
				</Panel>
				<Panel id="BattlePassInfoStripRight" />
			</Panel>

			<DOTAEventCrestImage id="EventCrestImage" />
			<DOTAEventLevelShield id="EventLevelShield" />
		</Panel>

		<DOTAHeroBadge id="HeroBadge" badgestyle="level" />
	</DOTAHudHeroPickingVersusPlayer>
</root>


